<?xml version="1.0" encoding="UTF-8"?>
<plugin title="Support Utility Plugin BI" loader="DEFAULT" name="bisupportwizard">

	<static-paths>
		<static-path url="/bisupportwizard/styles" localFolder="styles"/>
		<static-path url="/bisupportwizard/Images" localFolder="Images"/>
		<static-path url="/bisupportwizard/resources" localFolder="resources"/>
		<static-path url="/bisupportwizard/bisupportutility" localFolder="bisupportutility"/>
	</static-paths>

	<overlays>
		<overlay id="startup.bisupport"  resourcebundle="content/bisupportwizard/resources/messages/messages.properties" priority="1">
			<menubar id="helpmenu">
				<menuitem id="bisupportwizard" insertafter="aboutMenuItem" label="${biSupportWizard}" 
					command="mantleXulHandler.openUrl('SupportUtility','SupportUtility','content/bisupportwizard/selectSchema')" />
			</menubar>
		</overlay>
	</overlays>

	<content-generator id="bisupportwizard" 
					   title="Plugin" 
					   type="BISupportUtilityContentGenerator" 
					   class="org.pentaho.support.bi.BISupportUtilityContentGenerator"/>

	<webservice id="BISupportUtilityService" 
			type="gwt" 
			class="org.pentaho.support.bi.server.BISupportUtilityServiceImpl"/>

</plugin>
